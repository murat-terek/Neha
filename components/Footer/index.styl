.root
  background-color #f5f5f5
  padding 6u 2u
  +tablet()
    padding 10u 2u
  +desktop()
    padding 12u 6u

.container
  max-width 720px
  margin 0 auto
  flex-wrap wrap
  flex-direction row
  align-items center
  +desktop()
    max-width auto
    width 960px
  +wide()
    width 1200px

.first
  width 100%
  +tablet()
    width 40%
  +desktop()
    width 25%

.second
  width 100%
  margin-top 4u
  +tablet()
    width 60%
    align-items center
  +desktop()
    width 50%
    margin-top 0

.third
  width 100%
  margin-top 4u
  +desktop()
    width 25%
    align-items flex-end
    margin-top 0

.txt
  color #585858
  font-size 2u
  font-weight 300

.copyright
  margin-top 1u
